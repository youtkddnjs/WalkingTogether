<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <EditText
            android:id="@+id/inputID"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/edittext_box"
            android:hint="  ID"
            />
        <EditText
            android:id="@+id/inputPW"
            android:layout_width="150dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="@+id/inputID"
            app:layout_constraintTop_toBottomOf="@+id/inputID"
            android:background="@drawable/edittext_box"
            android:hint="  PassWord"
            android:layout_marginTop="4dp"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="@+id/inputID"
            app:layout_constraintBottom_toBottomOf="@+id/inputPW"
            app:layout_constraintLeft_toRightOf="@+id/inputID"
            android:text="Login"
            android:gravity="center"
            android:textSize="20sp"
            android:background="@drawable/edittext_box"
            android:layout_marginLeft="8dp"
            android:onClick="login"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.8"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
        <TextView
            android:id="@+id/kakaologin"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="카카오로그인"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/edittext_box"
            />
        <TextView
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/kakaologin"
            android:layout_marginTop="4dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="회원가입"
            android:textSize="32sp"
            android:gravity="center"
            android:background="@drawable/edittext_box"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>